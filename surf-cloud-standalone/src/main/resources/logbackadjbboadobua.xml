<configuration>

  <!-- Aktualisierte conversionRule für benutzerdefinierte Farben -->
  <conversionRule conversionWord="clr" class="org.springframework.boot.logging.logback.ColorConverter"/>

  <!-- Konsole mit direkten ANSI-Farbcodes -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %clr([%d{HH:mm:ss} %level]: [%logger] %msg%n){
        TRACE=blue, DEBUG=38;5;34, INFO=255;255;255, WARN=38;5;214, ERROR=38;5;196
        }
      </pattern>
    </encoder>
  </appender>

  <!-- Rolling File Appender (ähnlich zu RollingRandomAccessFile in log4j) -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/latest.log</file>
    <encoder>
      <pattern>[%d{HH:mm:ss}] [%thread/%level]: %msg%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <!-- Tägliches Rollover mit maximal 10 MB pro Datei -->
      <fileNamePattern>logs/%d{yyyy-MM-dd}-%i.log.gz</fileNamePattern>
      <maxFileSize>10MB</maxFileSize>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
  </appender>


  <!-- Root Logger (ähnlich zu Root in log4j) -->
  <root level="INFO">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="FILE" />
  </root>

</configuration>
